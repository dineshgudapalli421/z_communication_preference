<core:FragmentDefinition xmlns:tnt="sap.tnt" xmlns:cards="sap.f.cards" xmlns:form="sap.ui.layout.form" xmlns:m="sap.m" xmlns:core="sap.ui.core"     xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" 
    xmlns:smarttable="sap.ui.comp.smarttable"
>   
<smarttable:SmartTable 
                id="idCommunPrefSmartTable"
                entitySet="CustomerDetails"
                tableBindingPath="CustModel>/"
                tableType="ResponsiveTable"
                useVariantManagement="true"
                useTablePersonalisation="true"
                persistencyKey="CommPreferenceVariant"
                header="Records"
                showRowCount="true"
                enableAutoBinding="true"
                enableExport="false"
                demandPopin="true"
                requestAtLeastFields="AccountID,EntitySet,EntityKey,CorrespondenceTypeID,CorrespondenceDesc,DeliveryChannel,Status,ValidFrom,ValidTo,CreatedBy,CreatedOn,UpdatedBy,UpdatedOn"
            >
<Table id="tblCommunicationPreference"
                ariaLabelledBy="title"
                rows="{CustModel>/}" 
                enableSelectAll="false"
                selectionMode="Single" 
                selectionBehavior="RowSelector"           
                enableColumnFreeze="true">
                <extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="title" text="Customer Details"/>
                        <m:ToolbarSpacer/>
                        <m:Button
							id="btnCreate" text="Create"
							press="onCreateRecord" visible="{SelectionModel>/bCreateBtn}"/>
                        <m:Button
                            id="btnEdit" text="Edit"
                            press="handleActionPress" visible="{SelectionModel>/bEditBtn}"
                        />
                        <m:Button
                            id="btnView" text="View"
                            press="onViewRecord" visible="{SelectionModel>/bViewBtn}"
                        />
                    </m:OverflowToolbar>
                </extension>
                <columns>
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Business Partner" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" id="txtBP" text="{CustModel>AccountID}"/>
                        </template>
                    </Column>   
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Object Type" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{= ${CustModel>EntitySet} === 'Account' ? 'Business Partner' : 'ContractAccount'}"/>
                        </template>
                    </Column>  
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Object Key" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>EntityKey}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text=" Correspondence Type" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>CorrespondenceTypeID}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Corr. Description" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>CorrespondenceDesc}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text=" Correspondence Role" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{= ${CustModel>CommunicationCategoryID} === 'COMM' ? 'Business Contracts' : 'Paperless Billing' }"/>
                            <!-- <m:Text textAlign="Center" text="{CustModel>CommunicationCategoryID}"/> -->
                            <!-- {= ${CustModel>Status} === true} -->
                        </template>
                    </Column>   
                    <!-- <Column
                        width="11rem" hAlign="Center" visible="false">
                        <m:Label text="Delivery Channel" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>DeliveryChannelID}"/>
                        </template>
                    </Column>  -->
                     <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Delivery Channel" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>DeliveryChannel}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Status" textAlign="Center" width="100%"/>
                        <template>
                            <m:CheckBox id="colStatus" textAlign="Center" editable="false" selected="{= ${CustModel>Status} === true}" />
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Valid From" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>ValidFrom}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Valid To" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>ValidTo}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Created By" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>CreatedBy}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Created On" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>CreatedOn}"/>
                        </template>
                    </Column>
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Updated By" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>UpdatedBy}"/>
                        </template>
                    </Column> 
                    <Column
                        width="11rem" hAlign="Center">
                        <m:Label text="Updated On" textAlign="Center" width="100%"/>
                        <template>
                            <m:Text textAlign="Center" text="{CustModel>UpdatedOn}"/>
                        </template>
                    </Column> 
                </columns>
        </Table> 
        </smarttable:SmartTable>
</core:FragmentDefinition>